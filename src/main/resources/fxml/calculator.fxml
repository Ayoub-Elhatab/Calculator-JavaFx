<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.Calculator"
            stylesheets="/css/calculator.css"
            prefWidth="410" prefHeight="580">

    <BorderPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <top>
            <StackPane styleClass="display-container">
                <Label fx:id="display"
                       text="0"
                       styleClass="display-text"
                       StackPane.alignment="CENTER_RIGHT"/>
            </StackPane>
        </top>

        <center>
            <GridPane hgap="10" vgap="10" styleClass="button-grid">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <Button text="AC" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="btn, btn-gray"/>
                <Button text="±"  GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="btn, btn-gray"/>
                <Button text="%%" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="btn, btn-gray"/>
                <Button text="÷"  GridPane.rowIndex="0" GridPane.columnIndex="3" styleClass="btn, btn-orange"/>

                <Button text="7" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="btn, btn-dark"/>
                <Button text="8" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="btn, btn-dark"/>
                <Button text="9" GridPane.rowIndex="1" GridPane.columnIndex="2" styleClass="btn, btn-dark"/>
                <Button text="×" GridPane.rowIndex="1" GridPane.columnIndex="3" styleClass="btn, btn-orange"/>

                <Button text="4" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="btn, btn-dark"/>
                <Button text="5" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="btn, btn-dark"/>
                <Button text="6" GridPane.rowIndex="2" GridPane.columnIndex="2" styleClass="btn, btn-dark"/>
                <Button text="−" GridPane.rowIndex="2" GridPane.columnIndex="3" styleClass="btn, btn-orange"/>

                <Button text="1" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="btn, btn-dark"/>
                <Button text="2" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="btn, btn-dark"/>
                <Button text="3" GridPane.rowIndex="3" GridPane.columnIndex="2" styleClass="btn, btn-dark"/>
                <Button text="+" GridPane.rowIndex="3" GridPane.columnIndex="3" styleClass="btn, btn-orange"/>

                <Button text="0" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"
                        maxWidth="Infinity" styleClass="btn, btn-dark, btn-wide"/>
                <Button text="." GridPane.rowIndex="4" GridPane.columnIndex="2" styleClass="btn, btn-dark"/>
                <Button text="=" GridPane.rowIndex="4" GridPane.columnIndex="3" styleClass="btn, btn-orange"/>

            </GridPane>
        </center>

    </BorderPane>
</AnchorPane>
